
#parse("sources/HTML/layout/layout.vm")
#@mainLayout()

<body>
    <div class="single-product-area">
        <div class="zigzag-bottom"></div>
            <div class="container">
                <div class="row">
                    <div class="single-shop-product">
                        <div class="product-upper">
                            <div class="col-md-3 col-md-6">

                                #foreach($manager in $games)
                                    <h2><a href="/single-page/$manager.getId()">$manager.getName()</a></h2>
                                    <h4>$manager.getPlatform()</h4>
                                    <p>$manager.getGenre()</p>
                                    <div class="product-carousel-price">
                                        <ins>$manager.getPrice()</ins>
                                        <p></p>
                                    </div>
                                    <input type="submit" name="$manager.getName()" value="Add to cart"></input>
                                #end
                            </div>
                         </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="product-pagination text-center">
                        <nav>
                          <ul class="pagination">
                            <li>
                              <a href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                              </a>
                            </li>
                            <li><a href="#">1</a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">4</a></li>
                            <li><a href="#">5</a></li>
                            <li>
                              <a href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                              </a>
                            </li>
                          </ul>
                        </nav>                        
                    </div>
                </div>
            </div>
        </div>
    </div>


  </body>
</html>
#end